{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.+(\\.|/)(test|spec))\\.(ts)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],

  "preset": "ts-jest",
  "testEnvironment": "node",
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  },
  "setupFilesAfterEnv": ["./src/__tests__/defaultTimeout.js"]
}
